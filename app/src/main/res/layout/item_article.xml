<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable name="item" type="com.ibarra.news.data.db.entity.Article"/>
        <variable name="viewModel" type="com.ibarra.news.ui.article.ArticleViewModel"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        android:onClick="@{() -> viewModel.onClick(item.url)}"
        android:layout_marginTop="@dimen/margin_p"
        android:layout_marginEnd="@dimen/margin_p"
        app:cardCornerRadius="5dp"
        android:layout_marginStart="@dimen/margin_p">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_news_image"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginBottom="@dimen/margin_m"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:background="@tools:sample/avatars" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/source_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                android:gravity="start|center_vertical"
                android:text="@{item.title}"
                app:layout_constraintTop_toBottomOf="@+id/iv_news_image"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="LOL"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/source_url"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                android:gravity="start|center_vertical"
                android:text="@{item.author}"
                app:layout_constraintTop_toBottomOf="@+id/source_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:text="LOL"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/source_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_m"
                android:gravity="start|center_vertical"
                android:text="@{item.description}"
                app:layout_constraintTop_toBottomOf="@+id/source_url"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="LOL"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</layout>